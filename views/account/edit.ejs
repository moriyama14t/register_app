<%- include('../partials/header') -%>
    <form class="login-form" method="POST" action="/edit"  >
        <h2 class="form-heading">アカウント作成</h2>
        <p>名前</p>
        <input name="username" type="text" class="form-control" value="<%= data.username %>" />
        <p>登録メールアドレス</p>
        <input name="email" type="text" class="form-control" value="<%= data.email %>" readonly/>
        <p>好きな食べ物</p>
        <input name="question" type="text" class="form-control" value="<%= data.question %>"  />
        <p>パスワード</p>
        <input name="password" type="password" class="form-control" placeholder="パスワード" />
        <button class="btn btn-lg btn-primary btn-block" type="submit">編集</button>
    </form>
<%- include('../partials/footer') -%>